<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.MainController">
    <top>
        <ToolBar>
            <Button text="Sync" onAction="#onSync"/>
            <Label text="Filter:"/>
            <ChoiceBox fx:id="priorityFilter">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="ALL"/>
                        <String fx:value="LOW"/>
                        <String fx:value="MEDIUM"/>
                        <String fx:value="HIGH"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="colText" text="Task"/>
                <TableColumn fx:id="colPriority" text="Priority"/>
                <TableColumn fx:id="colCategory" text="Category"/>
                <TableColumn fx:id="colDone" text="Done"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <!-- Вот тут padding задан правильно как Insets -->
        <HBox spacing="8">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>

            <TextField fx:id="txtNew" promptText="new task"/>
            <ChoiceBox fx:id="prio" >
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="LOW"/>
                        <String fx:value="MEDIUM"/>
                        <String fx:value="HIGH"/>
                    </FXCollections>
                </items>
            </ChoiceBox>
            <TextField fx:id="cat" promptText="category"/>
            <Button text="Add" onAction="#onAdd"/>
            <Button text="Delete" onAction="#onDelete"/>
            <Button text="Mark Done" onAction="#onMarkDone"/>
            <Label fx:id="status" />
        </HBox>
    </bottom>
</BorderPane>
